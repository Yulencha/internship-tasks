- var spoilerCounter = 1

mixin spoiler(props)
	- const uniqueId = spoilerCounter++
	.spoiler&attributes(attributes)(data-component='spoiler')
		.spoiler__header
			.spoiler__title=`${uniqueId}. ${props.title}`
			<svg class='spoiler__button' xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 28 28" fill="none">
				<line x1="14" x2="14" y2="28" stroke="#114C9A" stroke-width="2"/>
				<line x1="28" y1="14" x2="-8.74228e-08" y2="14" stroke="#114C9A" stroke-width="2"/>
			</svg>
		.spoiler__text!= props.text

